<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="3"
    android:columnWidth="106dp"
    android:orientation="vertical"
    android:rowCount="3" >

    <LinearLayout
        android:id="@+id/topLeft"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:background="@drawable/shape"
        android:orientation="vertical"
                android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topMid"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topRight"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/midLeft"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@drawable/shape"
        android:orientation="vertical"
                android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/midCenter"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@drawable/shape"
        android:orientation="vertical"
                android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/midRight"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@drawable/shape"
        android:orientation="vertical"
                android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botLeft"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@drawable/shape"
        android:orientation="vertical"
                android:layout_width="106dp"
        android:layout_height="120dp" >

        <ImageView
            android:id="@+id/myimage7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</GridLayout>
